<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp">

    <View
        android:id="@+id/shimmerImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/gray_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerText1"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray_shimmer"
        app:layout_constraintStart_toEndOf="@id/shimmerImage"
        app:layout_constraintTop_toTopOf="@id/shimmerImage" />

    <View
        android:id="@+id/shimmerText2"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_shimmer"
        app:layout_constraintStart_toStartOf="@id/shimmerText1"
        app:layout_constraintTop_toBottomOf="@id/shimmerText1" />

</androidx.constraintlayout.widget.ConstraintLayout>