<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MoodBook" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/main</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Handlers">
        <item name="colorControlActivated">@color/main</item>
    </style>

    <style name="InputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/main</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
</resources>